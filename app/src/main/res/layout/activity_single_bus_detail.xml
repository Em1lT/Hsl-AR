<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".SingleBusDetailActivity"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="363dp"
            android:layout_height="65dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout">


        <TextView
                android:text="114"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_width="113dp"
                android:layout_height="match_parent" android:id="@+id/busNum"/>
        <TextView
                android:text="leppÃ¤vaara"
                android:layout_width="178dp"
                android:gravity="center"
                android:layout_height="match_parent" android:id="@+id/endStop"/>
        <Button
                android:text="AR"
                android:layout_width="40dp"
                android:layout_height="match_parent" android:id="@+id/bAr" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="156dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:paddingBottom="24dp"
            android:elevation="10dp"
            android:background="@android:color/white"
            android:id="@+id/linearLayout3">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView
                    android:text="@string/speed"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/lat"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/longi"
                    android:layout_width="match_parent"
                    android:gravity="center"

                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/odo"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/door_status"
                    android:layout_width="match_parent"
                    android:gravity="center"

                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/stop"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/event"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/heading"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView
                    android:text="speed"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/speed"/>
            <TextView
                    android:text="lat"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/lat"/>
            <TextView
                    android:text="long"
                    android:layout_width="match_parent"
                    android:gravity="center"

                    android:layout_height="wrap_content" android:id="@+id/longi"/>

            <TextView
                    android:text="odo"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/odo"/>
            <TextView
                    android:text="door status"
                    android:layout_width="match_parent"
                    android:gravity="center"

                    android:layout_height="wrap_content" android:id="@+id/drs"/>
            <TextView
                    android:text="stop"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/stop"/>

            <TextView
                    android:text="event"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/event"/>
            <TextView
                    android:text="heading"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/hdg"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="326dp"
            android:layout_height="408dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:id="@+id/linearLayout4">

        <com.mapbox.mapboxsdk.maps.MapView
                android:id="@+id/mapBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                mapbox:mapbox_cameraTargetLat="60.2193"
                mapbox:mapbox_cameraTargetLng="24.784258"
                mapbox:mapbox_styleUrl="mapbox://styles/mapbox/streets-v10"
                mapbox:mapbox_cameraZoom="12">

        </com.mapbox.mapboxsdk.maps.MapView>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="377dp"
            android:layout_height="54dp"

            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <Button
                android:text="You"
                android:background="@drawable/check_button_toggle_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bYou" android:layout_weight="1"/>
        <Button
                android:text="stop"
                android:background="@drawable/check_button_toggle_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bStop" android:layout_weight="1"/>
        <Button
                android:text="bus"
                android:background="@drawable/check_button_toggle_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bBus" android:layout_weight="1"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
